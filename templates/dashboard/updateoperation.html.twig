{% extends "base.html.twig" %}
{% block body %}
    <section class="container card" style="margin-top:50px!important;">
        <div class="row mask aqua-gradient-rgba">
            <h1 class="mx-auto font-weight-bold white-text"> Modification - {{operation.type}}</h1>
        </div>
        <div class="row mask" style="border-bottom:2px solid grey">
            <h3 class="mx-auto font-weight-bolder pt-3 pr-0"> <u>Client</u></h3>
            <div class="row text-black-50 mx-auto" style="border-left:2px solid;">
                <div class="col-md-6 mx-auto">
                    <h5 class="font-weight-bold"> {{operation.client.fullname}}</h5>
                </div>
                <div class="col-md-6 mx-auto">
                    <h5 class="font-weight-bold"> {{operation.client.useridentifier}}</h5>
                </div>
                <div class="col-md-6 mx-auto">
                    <h5 class="font-weight-bold"> {{operation.client.tel}}</h5>
                </div>
                <div class="col-md-6 mx-auto">
                    <h5 class="font-weight-bold"> {{operation.agency}}</h5>
                </div>
            </div>
        </div>
        <div class="font-weight-bold text-black-50 mx-auto">
            {{operation.createdat|date('d / m / Y')}}
            <span>Base: {{operation.base}} <span>
        </div>
        <div class="container">
            {{ form_start(form, {'attr':{'id':'operation'}}) }}
                <div class="mx-auto">
                    <div class="md-form row">
                        <div class="md-form mx-auto col-md-1 my-0">
                            {{ form_row(form.base) }}
                        </div>
                        <div class="md-form mx-auto col-md-2 my-0">
                            {{ form_row(form.avance) }}
                        </div>
                        <div class="md-form mx-auto col-md-2 my-0">
                            {{ form_row(form.poidair) }}
                        </div>
                        <div class="md-form mx-auto col-md-2 my-0">
                            {{ form_row(form.poideau) }}
                        </div>
                        <div class="md-form mx-auto col-md-2 my-0">
                        {{ form_row(form.densite) }}
                        </div>
                        <div class="md-form mx-auto col-md-2 my-0">
                        {{ form_row(form.karat) }}
                        </div>
                        <div class="mx-auto col-md-2 my-0">
                            {{ form_row(form.prixu) }}
                        </div>
                        <div class="mx-auto col-md-2 my-0">
                            {{ form_row(form.montant) }}
                        </div>
                    </div> 
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-danger btn-rounded font-weight-bold mx-auto" id="import">Modifier</button> 
                </div>
            {{ form_end(form) }} 
        </div>
    </section>
{% endblock %}
